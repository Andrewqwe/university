<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.andrzej.MonitorUI">
   <children>
      <VBox prefHeight="400.0" prefWidth="500.0">
         <children>
            <TextArea fx:id="monitor_text_view" prefHeight="350.0" prefWidth="500.0" />
            <HBox prefHeight="50.0" prefWidth="500.0">
               <children>
                  <Button fx:id="button_on" mnemonicParsing="false" onAction="#button_on_clicked" prefHeight="50.0" prefWidth="250.0" text="Włącz monitor" />
                  <Button fx:id="button_off" mnemonicParsing="false" onAction="#button_off_clicked" prefHeight="50.0" prefWidth="250.0" text="Wyłącz monitor" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
